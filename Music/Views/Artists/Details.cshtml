@model  Music.Models.Artist


@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Artist</h4>
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Bio:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Bio)
        </dd>
    </dl>
</div>


<div>
    <a href="/Artists/Index" class="btn btn-sm btn-default">Back</a>
    <a href="@Url.Action("Edit", "Artists", new { id = Model.ArtistID })" class="btn btn-sm btn-warning">Edit</a>

</div>
    
    





